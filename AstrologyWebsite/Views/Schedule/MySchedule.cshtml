@{
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}

@model List<AstrologyWebsite.Models.Booking>

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0">My Schedule</h4>
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboard</a></li>
                            <li class="breadcrumb-item active">My Schedule</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-lg-12">
                <div class="card" id="orderList">
                    <div class="card-header border-0">
                        <div class="row align-items-center gy-3">
                            <div class="col-sm">
                                <h5 class="card-title mb-0">My Bookings</h5>
                            </div>
                        </div>
                    </div>
                    <div class="card-body pt-0">
                        <div class="mt-3">
                            <div class="table-responsive table-card mb-1">
                                <table class="table table-nowrap align-middle" id="orderTable">
                                    <thead class="text-muted table-light">
                                        <tr class="text-uppercase">
                                            <th>#</th>
                                            <th>Customer</th>
                                            <th>Service</th>
                                            <th>Schedule At</th>
                                            <th>Status</th>
                                            <th>Note</th>
                                        </tr>
                                    </thead>
                                    <tbody class="list form-check-all">
                                        @if (Model != null && Model.Any())
                                        {
                                            int number = 1;
                                            foreach (var booking in Model)
                                            {
                                                <tr>
                                                    <td>@number</td>
                                                    <td>@booking.Customer?.FullName</td>
                                                    <td>@booking.Service?.ServiceName</td>
                                                    <td>@booking.ScheduleAt?.ToString("yyyy-MM-dd HH:mm")</td>
                                                    <td>
                                                        <span class="badge bg-info-subtle text-info text-uppercase">
                                                            @booking.Status
                                                        </span>
                                                    </td>
                                                    <td>@booking.Note</td>
                                                </tr>
                                                number++;
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="6" class="text-center">No bookings found.</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <div class="noresult" style="display: none">
                                    <div class="text-center">
                                        <lord-icon src="https://cdn.lordicon.com/msoeawqm.json" trigger="loop" colors="primary:#405189,secondary:#0ab39c" style="width:75px;height:75px"></lord-icon>
                                        <h5 class="mt-2">Sorry! No Result Found</h5>
                                        <p class="text-muted">No bookings found for your schedule.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--end col-->
        </div>
    </div>
    <!-- container-fluid -->
</div>
