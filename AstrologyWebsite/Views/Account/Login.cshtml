@model AstrologyWebsite.DTOs.LoginDto
@{
    Layout = "_Layout";
}
<style>
    body, #main-wrapper, .site-wrapper-reveal, .my-account-page-warpper, .myaccount-box-wrapper {
        background: #000 !important;
        color: #fff !important;
    }

    .breadcrumb-area,
    .breadcrumb-title {
        background: transparent !important;
        color: #fff !important;
    }

    /* Glassy modal box style */
    .content-modal-box {
        background: rgba(24, 24, 24, 0.85) !important;
        border-radius: 2.5rem;
        box-shadow: 0 8px 32px 0 rgba(220, 177, 74, 0.18), 0 1.5px 8px #dcb14a22;
        border: 1.5px solid rgba(220, 177, 74, 0.18);
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        padding: 2.5rem 2rem 2rem 2rem;
        margin-top: 2rem;
        color: #fff !important;
        font-family: 'Montserrat', 'Segoe UI', Arial, sans-serif;
        transition: box-shadow 0.2s;
    }

    .account-form-box h6 {
        color: #dcb14a;
        font-weight: 600;
        margin-bottom: 1.5rem;
        letter-spacing: 1px;
    }

    .single-input {
        margin-bottom: 1.5rem;
    }

        .single-input input {
            background: rgba(35,35,35,0.95) !important;
            color: #fff !important;
            border: 1.5px solid #444 !important;
            border-radius: 1.5rem;
            padding: 0.8rem 1.2rem;
            font-size: 1.08rem;
            font-family: 'Montserrat', 'Segoe UI', Arial, sans-serif;
            margin-bottom: 0.5rem;
            transition: border 0.2s, box-shadow 0.2s;
            box-shadow: 0 1px 4px #0002;
        }

            .single-input input:focus {
                border: 1.5px solid #dcb14a !important;
                outline: none;
                box-shadow: 0 0 0 2px #dcb14a44;
            }

    .btn--black {
        background: #dcb14a !important;
        color: #181818 !important;
        font-weight: bold;
        font-size: 1.15rem;
        border: none !important;
        border-radius: 2rem;
        padding: 0.75rem 2rem;
        margin-top: 1rem;
        box-shadow: none;
        transition: background 0.2s, color 0.2s, transform 0.1s;
        cursor: pointer;
        letter-spacing: 0.5px;
        display: flex;
        align-items: center;
        justify-content: center;
        height: auto;
        min-height: 48px;
    }

        .btn--black:hover, .btn--black:focus {
            background: #b8860b !important;
            color: #fff !important;
            transform: translateY(-2px) scale(1.03);
        }
    .checkbox-wrap label,
    .checkbox-wrap span {
        color: #fff !important;
        font-size: 0.98rem;
    }

    .checkbox-wrap input[type="checkbox"] {
        accent-color: #dcb14a;
        width: 1.1rem;
        height: 1.1rem;
        margin-right: 0.5rem;
    }

    .text-danger {
        color: #ff6b6b !important;
        font-size: 0.95rem;
        margin-top: 0.25rem;
        display: block;
    }

    a, a:visited {
        color: white !important;
    }
</style>



<!--====================  End of header area  ====================-->
<!-- breadcrumb-area start -->
@if (TempData["SuccessMessage"] != null)
{
    <div aria-live="polite" aria-atomic="true" style="position: fixed; top: 1.5rem; right: 1.5rem; z-index: 1080;">
        <div class="toast show" id="registerSuccessToast" role="alert" aria-live="assertive" aria-atomic="true"
             style="min-width: 320px; background: #222; color: #fff; border-radius: 1.2rem; box-shadow: 0 4px 24px #0008;">
            <div class="toast-header" style="background: #222; border-bottom: 1px solid #dcb14a; border-radius: 1.2rem 1.2rem 0 0;">
                <i class="ri-checkbox-circle-line" style="font-size:1.5rem;color:#dcb14a;margin-right:0.5rem;"></i>
                <strong class="me-auto" style="color:#dcb14a;">Registration Successful</strong>
                <button type="button" class="btn-close btn-close-white ms-2 mb-1" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body text-center">
                @TempData["SuccessMessage"]
            </div>
        </div>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div aria-live="polite" aria-atomic="true" style="position: fixed; top: 1.5rem; right: 1.5rem; z-index: 1080;">
        <div class="toast show" id="registerErrorToast" role="alert" aria-live="assertive" aria-atomic="true"
             style="min-width: 320px; background: #222; color: #fff; border-radius: 1.2rem; box-shadow: 0 4px 24px #0008;">
            <div class="toast-header" style="background: #222; border-bottom: 1px solid #d9534f; border-radius: 1.2rem 1.2rem 0 0;">
                <i class="ri-close-circle-line" style="font-size:1.5rem;color:#d9534f;margin-right:0.5rem;"></i>
                <strong class="me-auto" style="color:#d9534f;">Registration Failed</strong>
                <button type="button" class="btn-close btn-close-white ms-2 mb-1" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body text-center">
                @TempData["ErrorMessage"]
            </div>
        </div>
    </div>
}
<div class="breadcrumb-area" style="padding-top: 130px">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="row breadcrumb_box  align-items-center">
                    <div class="col-lg-6 col-md-6 col-sm-6 text-center text-sm-start">
                        <h2 class="breadcrumb-title">Login</h2>
                    </div>
                    <div class="col-lg-6  col-md-6 col-sm-6">
                        <!-- breadcrumb-list start -->
                        @* <ul class="breadcrumb-list text-center text-sm-end"> *@
                        @*     <li class="breadcrumb-item"><a href="index.html">Home</a></li> *@
                        @*     <li class="breadcrumb-item active">Login</li> *@
                        @* </ul> *@
                        <!-- breadcrumb-list end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb-area end -->


<div id="main-wrapper">
    <div class="site-wrapper-reveal">

        <div class="my-account-page-warpper" style="padding-bottom: 90px">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-7 m-auto">
                        <div class="myaccount-box-wrapper">
                            <div class="tab-content content-modal-box">
                                <div class="tab-pane fade show active" id="tab_list_06" role="tabpanel">
                                    <form asp-action="Login" class="account-form-box" method="post" asp-action="Account">
                                        <h6>Login your account</h6>
                                        <div class="single-input">
                                            <label asp-for="Email" class="form-label"></label>
                                            <input asp-for="Email" type="email" placeholder="Email" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        <div class="single-input">
                                            <label asp-for="Password" class="form-label"></label>
                                            <input asp-for="Password" type="password" placeholder="Password" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                        <div class="checkbox-wrap mt-10">
                                            <label class="label-for-checkbox inline mt-15">
                                                <input asp-for="RememberMe" class="input-checkbox" name="rememberme" type="checkbox" id="rememberme" value="forever" />
                                                <span>@Html.DisplayNameFor(m => m.RememberMe)</span>
                                            </label>
                                            <a href="#" class="mt-10">Lost your password?</a>
                                        </div>
                                        <div class="button-box mt-25">
                                            <input type="submit" value="Log in" class="btn btn--full btn--black" />
                                        </div>
                                    </form>
                                </div>
                              

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
@section Scripts {

    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var successToastEl = document.getElementById('registerSuccessToast');
            if (successToastEl) {
                var toast = new bootstrap.Toast(successToastEl, { delay: 4000 });
                toast.show();
            }
            var errorToastEl = document.getElementById('registerErrorToast');
            if (errorToastEl) {
                var toast = new bootstrap.Toast(errorToastEl, { delay: 4000 });
                toast.show();
            }
        });
    </script>
}

