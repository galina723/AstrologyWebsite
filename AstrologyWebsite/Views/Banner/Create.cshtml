@{
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}
@model AstrologyWebsite.DTOs.BannerDTO

<div class="page-content">
    <div class="container-fluid">
        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0">Create Banner</h4>
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Dashboards</a></li>
                            <li class="breadcrumb-item"><a asp-controller="Banner" asp-action="Banners">Banners</a></li>
                            <li class="breadcrumb-item active">Create Banner</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <!-- end page title -->

        <form asp-controller="Banner" asp-action="Create" id="banner-form" autocomplete="off" class="needs-validation" novalidate method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="card">
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Title</label>
                            <input asp-for="Title" type="text" class="form-control" placeholder="Banner title" required />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" placeholder="Banner description" required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="BannerType" class="form-label">Banner Type</label>
                            <select asp-for="BannerType" class="form-select" asp-items="ViewBag.BannerTypes">
                                <option value="">-- Select Banner Type --</option>
                            </select>
                            <span asp-validation-for="BannerType" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <!-- end card -->

                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Banner Image</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-4">
                            <h5 class="fs-14 mb-1">Banner Image</h5>
                            <div class="text-center">
                                <div class="position-relative d-inline-block">
                                    <div class="position-absolute top-100 start-100 translate-middle">
                                        <label for="banner-image-input" class="mb-0" data-bs-toggle="tooltip" data-bs-placement="right" title="Select Image">
                                            <div class="avatar-xs">
                                                <div class="avatar-title bg-light border rounded-circle text-muted cursor-pointer">
                                                    <i class="ri-image-fill"></i>
                                                </div>
                                            </div>
                                        </label>
                                        <input asp-for="ImageFile" class="form-control d-none" id="banner-image-input" type="file" accept="image/png, image/gif, image/jpeg">
                                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                                    </div>
                                    <div class="avatar-lg">
                                        <div class="avatar-title bg-light rounded">
                                            <img src="~/image/placeholder.png" id="banner-img" class="avatar-md h-auto" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end card -->

                <div class="text-end mb-3">
                    <button type="submit" class="btn btn-success w-sm">Submit</button>
                </div>
            </div>
            <!-- end row -->
        </form>
    </div>
    @section Scripts {
        <script>
            document.getElementById('banner-image-input').addEventListener('change', function (event) {
                const file = event.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function (e) {
                        document.getElementById('banner-img').src = e.target.result;
                    };
                    reader.readAsDataURL(file);
                }
            });
        </script>
    }
</div>
