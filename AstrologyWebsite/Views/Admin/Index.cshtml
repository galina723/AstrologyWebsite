@model AstrologyWebsite.ViewModels.AdminDashboardViewModel;
@{
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}
<div class="page-content">
    <div class="container-fluid">

        <!-- KPI Cards -->
        <div class="row">
            <div class="col-xl-3 col-md-6">
                <div class="card card-animate">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1 overflow-hidden">
                                <p class="text-uppercase fw-medium text-muted text-truncate mb-0">Total Bookings</p>
                            </div>
                        </div>
                        <div class="d-flex align-items-end justify-content-between mt-4">
                            <div>
                                <h4 class="fs-22 fw-semibold ff-secondary mb-4">
                                    <span class="counter-value" data-target="@Model.TotalBookings">0</span>
                                </h4>
                            </div>
                            <div class="avatar-sm flex-shrink-0">
                                <span class="avatar-title bg-success-subtle rounded fs-3">
                                    <i class="ri-calendar-check-line text-success"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card card-animate">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1 overflow-hidden">
                                <p class="text-uppercase fw-medium text-muted text-truncate mb-0">Active Readers</p>
                            </div>
                        </div>
                        <div class="d-flex align-items-end justify-content-between mt-4">
                            <div>
                                <h4 class="fs-22 fw-semibold ff-secondary mb-4">
                                    <span class="counter-value" data-target="@Model.ActiveReaders">0</span>
                                </h4>
                            </div>
                            <div class="avatar-sm flex-shrink-0">
                                <span class="avatar-title bg-info-subtle rounded fs-3">
                                    <i class="ri-user-star-line text-info"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card card-animate">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1 overflow-hidden">
                                <p class="text-uppercase fw-medium text-muted text-truncate mb-0">Total Users</p>
                            </div>
                        </div>
                        <div class="d-flex align-items-end justify-content-between mt-4">
                            <div>
                                <h4 class="fs-22 fw-semibold ff-secondary mb-4">
                                    <span class="counter-value" data-target="@Model.TotalUsers">0</span>
                                </h4>
                            </div>
                            <div class="avatar-sm flex-shrink-0">
                                <span class="avatar-title bg-warning-subtle rounded fs-3">
                                    <i class="ri-group-line text-warning"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <div class="card card-animate">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1 overflow-hidden">
                                <p class="text-uppercase fw-medium text-muted text-truncate mb-0">New Users (This Month)</p>
                            </div>
                        </div>
                        <div class="d-flex align-items-end justify-content-between mt-4">
                            <div>
                                <h4 class="fs-22 fw-semibold ff-secondary mb-4">
                                    <span class="counter-value" data-target="@Model.NewUsers">0</span>
                                </h4>
                            </div>
                            <div class="avatar-sm flex-shrink-0">
                                <span class="avatar-title bg-primary-subtle rounded fs-3">
                                    <i class="ri-user-add-line text-primary"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Booking Trends Chart & Booking Status -->
        <div class="row">
            <div class="col-xl-8">
                <div class="card">
                    <div class="card-header border-0 align-items-center d-flex">
                        <h4 class="card-title mb-0 flex-grow-1">Booking Trends</h4>
                      
                    </div>
                    <div class="card-body p-0 pb-2">
                        <div class="w-100">
                            <div id="booking_trends_chart" class="apex-charts" dir="ltr"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-4">
                <div class="card card-height-100">
                    <div class="card-header align-items-center d-flex">
                        <h4 class="card-title mb-0 flex-grow-1">Booking Status</h4>
                    </div>
                    <div class="card-body">
                        <div class="row g-0 text-center">
                            @foreach (var status in Model.BookingStatus)
                            {
                                <div class="col-6 col-sm-6">
                                    <div class="p-3 border border-dashed border-start-0">
                                        <h5 class="mb-1"><span class="counter-value" data-target="@status.Count">0</span></h5>
                                        <p class="text-muted mb-0">@status.Status</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Upcoming Bookings & Popular Services -->
        <div class="row">
            <div class="col-xl-6">
                <div class="card">
                    <div class="card-header align-items-center d-flex">
                        <h4 class="card-title mb-0 flex-grow-1">Upcoming Bookings</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive table-card">
                            <table class="table table-borderless table-centered align-middle table-nowrap mb-0">
                                <thead class="text-muted table-light">
                                    <tr>
                                        <th scope="col">Booking ID</th>
                                        <th scope="col">User</th>
                                        <th scope="col">Reader</th>
                                        <th scope="col">Service</th>
                                        <th scope="col">Date/Time</th>
                                        <th scope="col">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var booking in Model.UpcomingBookings)
                                    {
                                        <tr>
                                            <td>@booking.Id</td>
                                            <td>@booking.User</td>
                                            <td>@booking.Reader</td>
                                            <td>@booking.Service</td>
                                            <td>@booking.DateTime</td>
                                            <td>
                                                <span class="badge @(booking.Status == "Confirmed" ? "bg-success-subtle text-success" : booking.Status == "Pending" ? "bg-warning-subtle text-warning" : "bg-danger-subtle text-danger")">
                                                    @booking.Status
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-6">
                <div class="card card-height-100">
                    <div class="card-header align-items-center d-flex">
                        <h4 class="card-title mb-0 flex-grow-1">Popular Services</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive table-card">
                            <table class="table table-hover table-centered align-middle table-nowrap mb-0">
                                <thead>
                                    <tr>
                                        <th>Service</th>
                                        <th>Bookings</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var service in Model.PopularServices)
                                    {
                                        <tr>
                                            <td>@service.Name</td>
                                            <td>@service.Bookings</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script src="~/Admin/libs/apexcharts/apexcharts.min.js"></script>
    <script>
        var bookingTrends = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.BookingTrends));
        document.addEventListener('DOMContentLoaded', function () {
            var options = {
                chart: { type: 'line', height: 300 },
                series: [{
                    name: 'Bookings',
                    data: bookingTrends
                }],
                xaxis: {
                    categories: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec']
                }
            };
            var chart = new ApexCharts(document.querySelector("#booking_trends_chart"), options);
            chart.render();
        });

        // Counter animation (optional)
        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.counter-value').forEach(function (el) {
                var target = parseInt(el.getAttribute('data-target'));
                var count = 0;
                var increment = Math.ceil(target / 50);
                var interval = setInterval(function () {
                    count += increment;
                    if (count >= target) {
                        count = target;
                        clearInterval(interval);
                    }
                    el.textContent = count;
                }, 20);
            });
        });
    </script>
}
